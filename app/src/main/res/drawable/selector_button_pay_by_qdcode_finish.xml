<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:color="#99FFFFFF" android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <!-- 填充的颜色 -->
            <solid android:color="#EE49D5B2" />
            <!-- 按钮的四个角的弧形 为5dp -->
            <corners android:radius="5dp" />

        </shape>
    </item>

    <item android:color="@color/colorWhite_FFFFFFFF" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <!-- 填充的颜色 -->
            <solid android:color="@color/colorBlue_FF49D5B2" />
            <!-- 按钮的四个角的弧形 为5dp -->
            <corners android:radius="5dp" />

        </shape>
    </item>

    <item android:color="@color/colorWhite_FFFFFFFF" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >

            <!-- 填充的颜色 -->
            <solid android:color="#EE49D5B2" />
            <!-- 按钮的四个角的弧形 为5dp -->
            <corners android:radius="5dp" />

        </shape>
    </item>
    
</selector>
 