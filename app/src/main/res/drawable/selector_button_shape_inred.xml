<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/colorBlack_FF7E7E7E" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="#FFB80000" />
            <!-- 按钮的四个角的弧形 为5dp -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:color="@color/colorWhite_FFFFFFFF">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <!-- 填充的颜色 -->
            <solid android:color="#FFE80000" />
            <!-- 按钮的四个角的弧形 为5dp -->
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>