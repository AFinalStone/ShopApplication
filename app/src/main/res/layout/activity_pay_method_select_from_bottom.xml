<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PayMethodSelectActivity">


    <LinearLayout
        android:id="@+id/linearLayout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite_FFFFFFFF"
        android:orientation="vertical"
        android:paddingBottom="29dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_closeActivity"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/icon_close_01" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:layout_below="@id/view_border02"
                android:text="@string/tv_selectPayMethod_"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_17" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dividingLineColor"/>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"/>

        <Button
            android:id="@+id/btn_queryToPay"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/view_border03"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:layout_marginTop="41dp"
            android:enabled="false"
            android:background="@drawable/selector_button_commen_01"
            android:text="@string/payMethodSelectActivity_tv_nextStep"
            android:textColor="@drawable/selector_button_commen_01"
            android:textSize="@dimen/textFontSize_19" />
    </LinearLayout>
</RelativeLayout>
