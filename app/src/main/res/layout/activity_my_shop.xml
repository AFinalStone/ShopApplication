<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shi.xianglixiangqin.activity.MyShopActivity">

    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/linearLayout_QRCode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_my_shop"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_saoMa"
            android:layout_width="188dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_my_shop_saoma" />

        <ImageView
            android:id="@+id/iv_myQRCode"
            android:layout_width="200dp"
            android:layout_height="260dp"
            android:paddingRight="45dp"
            android:paddingLeft="45dp"
            android:paddingTop="86dp"
            android:paddingBottom="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_empty"
            android:background="@mipmap/icon_my_shop_qrcode"/>

        <TextView
            android:id="@+id/tv_myShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite_FFFFFFFF"
            android:textSize="@dimen/textFontSize_20"
            android:text="我的店铺"/>
    </LinearLayout>
</LinearLayout>
