<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_payMethod"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_empty" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginLeft="17dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_payMethodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_below="@id/iv_functionType"
            android:layout_centerHorizontal="true"
            android:text="付款名称"
            android:textColor="@color/colorBlack_FF333333"
            android:textSize="@dimen/textFontSize_15" />

        <TextView
            android:id="@+id/tv_payMethodDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="9dp"
            android:text="付款方式描述"
            android:textColor="@color/colorBlack_FF999999"
            android:textSize="@dimen/textFontSize_9" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_ifSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:focusable="false"
        android:clickable="false"
        android:layout_marginRight="16dp"
        android:button="@drawable/checkbox_selector_02" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/dividingLineColor"/>
</LinearLayout>
