<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="14dp" >

        <TextView
            android:id="@+id/conditionTitle_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/selectArrow_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/arrow_right"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/condition_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/selectArrow_imageView"
            android:paddingRight="15dp"
            android:text="@string/allBrands"
            android:textSize="14sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_alignLeft="@id/conditionTitle_textView"
            android:layout_below="@id/conditionTitle_textView"
            android:layout_marginTop="10dp"
            android:background="#ffcccccc"
            android:paddingLeft="15dp" />
    </RelativeLayout>

</LinearLayout>