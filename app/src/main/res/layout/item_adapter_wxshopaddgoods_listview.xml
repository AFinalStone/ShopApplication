<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_wxShopGoodsClass02"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_GoodsClass"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_below="@id/relativeLayout_settingGoods"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:text="商品分类"
        android:textSize="@dimen/textFontSize3" />

    <TextView
        android:id="@+id/tv_selectGoodsClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/selectWXShopGoodsClass"
        android:textColorHint="@color/grayFont"
        android:textColor="@color/lightBlack"
        android:textSize="@dimen/textFontSize3" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/arrow_right" />

</LinearLayout>