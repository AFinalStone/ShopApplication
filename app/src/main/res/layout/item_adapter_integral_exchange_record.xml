<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite_FFFFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="2dp"
        android:background="@color/dividingLineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_goodsImages"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_empty" />

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/iv_goodsImages"
            android:gravity="center|left"
            android:text="商品名称"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorBlack_FF323232" />

        <LinearLayout
            android:id="@+id/linearLayout_goodsPrice"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/tv_goodsName"
            android:layout_toRightOf="@id/iv_goodsImages"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goodsJfPrices"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="0"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="积分"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:textColor="@color/colorBlack_FFCCCCCC"
                android:textSize="@dimen/textFontSize_12" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:maxLines="1"
                android:text="+"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_14" />
            <TextView
                android:id="@+id/tv_goodsPrices"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:maxLines="1"
                android:text="0.00"
                android:textColor="@color/colorBlack_FF333333"
                android:textSize="@dimen/textFontSize_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="元"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:textColor="@color/colorBlack_FFCCCCCC"
                android:textSize="@dimen/textFontSize_12" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_recordTime"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/linearLayout_goodsPrice"
            android:layout_toRightOf="@id/iv_goodsImages"
            android:gravity="center|left"
            android:text="记录时间"
            android:textColor="@color/colorBlack_FFCCCCCC"
            android:textSize="@dimen/textFontSize_12" />

    </RelativeLayout>

</LinearLayout>