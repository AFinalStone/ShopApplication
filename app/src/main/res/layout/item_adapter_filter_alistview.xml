<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/conditionTitle_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativeLayout_settingGoods"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="商品分类"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/textFontSize2" />

        <ImageView
            android:id="@+id/selectArrow_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/arrow_right"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/condition_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/selectArrow_imageView"
            android:paddingRight="15dp"
            android:text="@string/allBrands"
            android:textColor="@color/red"
            android:textSize="@dimen/textFontSize3" />
    </RelativeLayout>

</LinearLayout>