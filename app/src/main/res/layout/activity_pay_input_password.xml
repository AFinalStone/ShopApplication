<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite_FFFFFFFF"
    android:orientation="vertical"
    tools:context=".activity.PayMoneyInputPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBarHeight"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_closeActivity"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/ic_menu_back_01" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="@string/title_payInputPassword"
            android:textColor="@color/colorBlack_FF333333"
            android:textSize="@dimen/textFontSize_17" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividingLineColor" />

    <TextView
        android:id="@+id/tv_bankCardBindPhoneDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/tv_payInputPasswordBankCardBindMobile"
        android:textColor="@color/colorBlack_FF999999"
        android:textSize="@dimen/textFontSize_12"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape_inwhite_outgray_circle_02"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_securityCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_payInputPasswordSecurityCode"
            android:textColor="@color/colorBlack_FF323232"
            android:textColorHint="@color/colorGray_FFCDCDCD"
            android:textSize="@dimen/textFontSize_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGray_FFCDCDCD" />

        <TextView
            android:id="@+id/tv_getSecurityCode"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="@string/getSecurityCode"
            android:textColor="@drawable/selector_text_color_02"
            android:textSize="@dimen/textFontSize_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape_inwhite_outgray_circle_02"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_payPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/hint_payInputPassword"
            android:inputType="numberPassword"
            android:textColor="@color/colorBlack_FF323232"
            android:textColorHint="@color/colorGray_FFCDCDCD"
            android:textSize="@dimen/textFontSize_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_toChangePayPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:text="@string/tv_payInputPasswordToChangePayPassword"
        android:textSize="@dimen/textFontSize_12"
        android:textColor="@color/colorBlack_FF999999"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <Button
        android:id="@+id/btn_payMoney"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"

        android:background="@drawable/selector_button_commen_01"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/btn_payInputPasswordQueryPay"
        android:textColor="@drawable/selector_button_commen_01"
        android:textSize="@dimen/textFontSize_18" />
</LinearLayout>
