<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/shop_homeScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logImageView"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_empty"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_shopName"
                style="@style/ShopInformationTextViewStyle"
                android:text="店铺名称：" />

            <TextView
                android:id="@+id/tv_realName"
                style="@style/ShopInformationTextViewStyle"
                android:text="真实姓名：" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
             <TextView
                style="@style/ShopInformationTextViewStyle"
                android:layout_width="wrap_content"
                android:text="联系电话：" />
                          
             <TextView
                android:id="@+id/tv_phoneNumber"
                android:layout_width="wrap_content"
                style="@style/ShopInformationTextViewStyle"
                android:text=""
                android:textColor="@color/lightBlue" />               
                
            </LinearLayout>


            <TextView
                android:id="@+id/tv_shopAddress"
                style="@style/ShopInformationTextViewStyle"
                android:text="店铺地址：" />

            <TextView
                style="@style/ShopInformationTextViewStyle"
                android:text="营业执照" />

            <ImageView
                android:id="@+id/iv_businessLicense"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_empty"
                android:scaleType="fitXY" />

            <TextView
                style="@style/ShopInformationTextViewStyle"
                android:text="店铺简介" />
            <TextView
                android:id="@+id/tv_shopIntroduction"
                style="@style/ShopInformationTextViewStyle"
                android:text="" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>