<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_headerImage"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@mipmap/background_integral_shopping_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorWhite_FFFFFFFF"
        android:orientation="horizontal"
        android:paddingLeft="18dp"
        android:paddingRight="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/tv_integralActivityMyTotalIntegral"
            android:textColor="@color/colorBlack_FF333333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_totalIntegral"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="0"
            android:textColor="@color/colorRed_FFFF5E00"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_toIntegralExchangeRecord"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_shape_inwhite_outgray_circle_01"
            android:text="@string/tv_integralActivityIntegralExchangeRecord"
            android:textColor="@color/colorBlack_FF333333"
            android:textSize="@dimen/textFontSize_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/dividingLineColor" />
</LinearLayout>