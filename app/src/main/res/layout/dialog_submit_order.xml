<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="标题"
        android:textSize="@dimen/textFontSize2" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="5dp"
        android:text="内容"
        android:textSize="@dimen/textFontSize4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:textColor="@color/lightBlack"
            android:textSize="@dimen/textFontSize3"
            android:background="@drawable/button_shape_inwhite_outgray_01" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="@string/ok"
            android:textSize="@dimen/textFontSize3"
            android:textColor="@color/white"
            android:background="@drawable/button_shape_inred_01" />
    </LinearLayout>

</LinearLayout>